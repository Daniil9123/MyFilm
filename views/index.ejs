<%- include('partials/header', { title: 'Films' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Films</h1>
  <% if (currentUser && currentUser.rule === 'admin') { %>
    <a href="/films/new" class="btn btn-success">Add film</a>
  <% } %>
 </div>
<div class="row g-3">
  <% films.forEach(p => { %>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <img src="<%= p.pic %>" class="card-img-top object-fit-cover" style="height: 180px" alt="pic" />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-text small text-muted flex-grow-1"><%= p.desc %></p>
          <p class="card-text small text-muted">Created At: <%= new Date(p.createdAt).toLocaleString() %></p>
          <div class="d-flex justify-content-between align-items-center">
            <span class="fw-bold">$<%= Number(p.price).toFixed(2) %></span>
            <% if (currentUser && currentUser.rule === 'admin') { %>
              <div class="btn-group">
                <a class="btn btn-outline-primary btn-sm" href="/films/<%= p.id %>/edit">Edit</a>
                <form action="/films/<%= p.id %>/delete" method="post">
                  <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete film?')">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
 </div>
<%- include('partials/footer') %>
